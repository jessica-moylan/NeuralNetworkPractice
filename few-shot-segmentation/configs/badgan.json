{
  "exp_name": "badgan_experiment",
  "agent": "BADGAN_Model",
  "phase": "training",
  "load_chkpt": false,

  "cuda": true,
  "gpu_device": 0,
  "seed": 1,

  "noise_dim": 200,
  "vi_loss_weight": 0.01,

  "volume_shape": [144, 192],
  "patch_shape": [32, 32],
  "extraction_step": [8, 8 ],
  "relu_slope": 0.2,

  "batch_size": 30,
  "num_classes": 4,
  "num_modalities": 2,
  "number_images_training": 1,
  "number_unlab_images_training": 12,

  "learning_rate_D": 0.0001,
  "learning_rate_G": 0.0001,
  "learning_rate_E": 0.0001,
  "weight_decay": 0,
  "beta1D": 0.5,
  "beta1G": 0.5,
  "beta1E": 0.5,
  "beta2D": 0.999,
  "beta2G": 0.999,
  "beta2E": 0.999,

  "epochs": 100,
  "validation_every_epoch": 1,
  "checkpoint_file": "checkpoint.pth.tar",
  "checkpoint_dir": "./checkpoints/",

  "data_loader_workers": 4,
  "pin_memory": true,
  "async_loading": true,

  "data_mode": "imgs",
  "data_directory": "./data/iSEG_preprocessed"
}
